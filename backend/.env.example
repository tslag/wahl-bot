# Example environment variables for the backend
# Copy this file to `.env` and fill real values. DO NOT commit secrets.

# API keys and templates
GROQ_API_KEY=
PROMPT_TEMPLATE_PATH_FEWSHOT="./wahl_bot/config/prompts/few_shot_prompt.j2"
PROMPT_TEMPLATE_PATH_QA="./wahl_bot/config/prompts/qa_prompt.j2"
PROMPT_TEMPLATE_PATH_QUERY_OPT="./wahl_bot/config/prompts/query_opt_prompt.j2"

# Database (async SQLAlchemy URL)
# Example: postgresql+asyncpg://user:password@localhost:5432/wahlbot_db
DATABASE_URL_ASYNC=

# Local program directory (relative to repo root)
PROGRAM_DIRECTORY="./Programme25/"

# JWT settings
# SECRET_KEY should be a long, random secret in production
SECRET_KEY=
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
